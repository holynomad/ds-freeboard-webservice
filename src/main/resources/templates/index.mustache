{{>layout/header}}

    <h1>스프링 부트 웹 Dynamic Shark 서비스 v2.1</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6">
                <a href="/youtube" role="button" class="btn btn-primary">유튜브 API 테스트</a>
            </div>
        </div>
        <br>
        <h1>Search</h1>
        <form>
            <div class="form-group">
                <input type="text" class="form-control" id="search">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="search">
            </div>
        </form>
    </div>
    <br>
    <!-- 그리드 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
            <tr>
                <th>글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>

{{>layout/footer}}
